@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar Contato</h1>
</div>

<form>
    <div class="mb-3">
        <label for="Nome" class="form-label">Nome</label>
        <input type="text" class="form-control" id="Nome" placeholder="digite o nome do contato">
    </div>
    <div class="mb-3">
        <label for="Email" class="form-label">Email</label>
        <input type="email" class="form-control" id="Email" placeholder="digite o email do contato">
    </div>
    <div class="mb-3">
        <label for="Numero" class="form-label">Numero</label>
        <input type="number" class="form-control" id="Numero" placeholder="digite o numero do contato">
    </div>

    <div class="d-grid gap-2 d-md-block">
        <button type="submit" class="btn btn-primary btn-block">Alterar</button>
        <a role="button" class="btn btn-secondary btn-" asp-controller="Contato" asp-action="Index">Voltar</a>
    </div>

</form>
