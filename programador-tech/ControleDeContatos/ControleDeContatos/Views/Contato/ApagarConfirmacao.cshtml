@model ContatoModel
@{
    ViewData["Title"] = "Confirmacao de apagar o contato";
}


<div class="text-center">
    <h3>
        Realmente deseja apagar o contato (@Model.Nome) com o numero (@Model.Celular)?
    </h3>
</div>

<div class="d-grid gap-2 d-md-block">
    <a class="btn btn-primary" role="button" asp-route-id="@Model.Id" asp-controller="Contato" asp-action="Index">Cancelar exclusao</a>
    <a class="btn btn-danger" role="button" asp-route-id="@Model.Id" asp-action="Apagar" asp-controller="Contato">Confirmar exclusao</a>
</div>
