@model List<CarolModel>

@{
    Layout = "_LayoutCarol";
}

<div class="d-grid gap-2 d-md-flex justify-content-md-start">
    <a class="btn btn-primary marcar" role="button" asp-controller="Carol" asp-action="Marcar">Marcar Dia</a>
</div>
<br>
<table class="table table-striped table-bordered table-hover table-feminina">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Dia</th>
            <th>Treinou?</th>
            <th>Músculos</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (CarolModel carol in Model)
            {
                <tr>
                    <td>@carol.Id </td>
                    <td>@carol.Dia</td>
                    @if (carol.treinou == true)
                    {
                        <td><i class="bi bi-check text-success"></i></td>
                    }
                    else
                    {
                        <td><i class="bi bi-x text-danger"></i></td>
                    }
                    <td>@carol.Musculo</td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="row my-4">
    <div class="col-4 d-flex justify-content-start">
        <img src="~/Assets/img/unicornio.png" alt="Unicórnio" class="img-fluid" style="object-fit:cover;">
    </div>
    <div class="col-4 d-flex justify-content-center">
        <img src="~/Assets/img/urso-levantado-peso.png" alt="Urso Levantando Peso" class="img-fluid " style="object-fit:cover;">
    </div>
    <div class="col-4 d-flex justify-content-end">
        <img src="~/Assets/img/urso.png" alt="Urso" class="img-fluid" style="object-fit:cover;">
    </div>
</div>

