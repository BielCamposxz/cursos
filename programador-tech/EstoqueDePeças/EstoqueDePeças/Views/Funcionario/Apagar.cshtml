@model FuncionarioModel

<div class="text-center">
    <h3>
        Realmente deseja apagar o Funcionario (@Model.Nome)?
    </h3>
</div>

<div class="d-grid gap-2 col-10 col-sm-8 col-md-6 mx-auto">
    <a class="btn btn-primary" role="button" asp-route-id="@Model.id" asp-controller="Funcionario" asp-action="Index">Cancelar exclusao</a>
    <a class="btn btn-danger" role="button" asp-route-id="@Model.id" asp-action="ApagarDoBanco" asp-controller="Funcionario">Confirmar exclusao</a>
</div>
