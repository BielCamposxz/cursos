@model List<PessoasModel>

    <a role="button" class="text-center btn btn-primary" asp-controller="Pessoas" asp-action="Criar" >Adicionar pessoa</a>

<table>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">nome</th>
                <th scope="col">sobrenome</th>
                <th scope="col">email</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(PessoasModel pessoas in Model)
            {
                <tr>
                    <th scope="row">@pessoas.Id</th>
                    <td>@pessoas.Nome</td>
                    <td>@pessoas.Sobrenome</td>
                    <td>@pessoas.Email</td>
                    <td>
                        <a role="button" class="btn btn-primary" asp-controller="Pessoas" asp-route-id="@pessoas.Id" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Pessoas" asp-route-id="@pessoas.Id" asp-action="Apagar">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</table>